{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
