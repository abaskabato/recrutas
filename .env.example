# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/recrutas
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=recrutas

# Authentication
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production

# AI/ML Services (Required for AI matching)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Services (Optional - for notifications)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Payment Processing (Optional - for subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key-here
STRIPE_PRICE_ID=price_your-price-id-here

# Application Configuration
NODE_ENV=development
PORT=5000

# External Services (Optional)
REPLIT_DOMAINS=your-domain.replit.app
REPL_ID=your-repl-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Job Scraping Configuration
JOB_SCRAPER_DELAY=2000
JOB_CACHE_TTL=300000

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_JOB_SCRAPING=true
ENABLE_WEBSOCKETS=true
ENABLE_NOTIFICATIONS=true