# =================================
# Recrutas Environment Configuration
# =================================

# REQUIRED: Supabase Project Configuration
# Find these in your Supabase project settings
VITE_SUPABASE_URL="https-your-project-url.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_URL="https-your-project-url.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# REQUIRED: Database Configuration  
# Supabase PostgreSQL connection strings
DATABASE_URL="postgresql://postgres.[PROJECT]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# REQUIRED: Application URLs
# Frontend URL for CORS and email links
FRONTEND_URL="http://localhost:5173"
APP_URL="http://localhost:5000"

# REQUIRED: Security Secrets
# Generate strong random strings for these (e.g., openssl rand -base64 32)
DEV_SECRET="your-dev-secret-for-seeding-database"
ADMIN_SECRET="your-admin-secret-for-admin-operations"
CRON_SECRET="your-cron-secret-for-scheduled-jobs"



# =================================
# OPTIONAL: AI Features
# =================================

# OpenAI API key for intelligent job matching and resume analysis
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Groq API key for alternative AI provider
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your-groq-api-key-here

# Hugging Face API key for resume parsing
# Get your key from: https://huggingface.co/settings/tokens
HF_API_KEY=hf_your-huggingface-api-key

# Ollama (local AI) configuration
USE_OLLAMA=false
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mistral



# =================================
# OPTIONAL: Email Service
# =================================

# SendGrid API key for email notifications
# Get your key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here



# =================================
# OPTIONAL: Payment Processing
# =================================

# Stripe keys for subscription management
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key-here
STRIPE_PRICE_ID=price_your-price-id-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret



# =================================
# OPTIONAL: OAuth Social Login
# =================================

# GitHub OAuth App
# Create at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth Client
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth Client
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret



# =================================
# OPTIONAL: Job Aggregator APIs
# =================================

# RapidAPI key for job aggregators
RAPIDAPI_KEY=your-rapidapi-key

# Jooble API key
JOOBLE_API_KEY=your-jooble-api-key

# USA Jobs API key
USAJOBS_API_KEY=your-usajobs-api-key

# News API key for layoff news
NEWS_API_KEY=your-news-api-key



# =================================
# OPTIONAL: HR Integration APIs
# =================================

# Workday integration
WORKDAY_API_KEY=your-workday-api-key
WORKDAY_BASE_URL=https://api.workday.com
WORKDAY_WEBHOOK_SECRET=your-workday-webhook-secret

# Greenhouse integration
GREENHOUSE_API_KEY=your-greenhouse-api-key
GREENHOUSE_WEBHOOK_SECRET=your-greenhouse-webhook-secret

# Lever integration
LEVER_API_KEY=your-lever-api-key
LEVER_WEBHOOK_SECRET=your-lever-webhook-secret



# =================================
# OPTIONAL: Monitoring & Error Tracking
# =================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn

# Log level (debug, info, warn, error)
LOG_LEVEL=info



# =================================
# OPTIONAL: Development & Testing
# =================================

# Seed user for database seeding (development only)
SEED_USER_EMAIL=seed@example.com
SEED_USER_PASSWORD=seed-password
SEED_USER_FIRST_NAME=Test
SEED_USER_LAST_NAME=User

# Enable background services (set to true for local dev with background jobs)
ENABLE_BACKGROUND_SERVICES=false

# Enable Agent Apply feature (experimental - requires browser runtime)
# WARNING: Not suitable for serverless environments (Vercel, Lambda)
ENABLE_AGENT_APPLY=false



# =================================
# Development Configuration
# =================================

NODE_ENV=development
PORT=5000



# =================================
# Getting Started
# =================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in required variables (DATABASE_URL, VITE_SUPABASE_URL, etc.)
# 3. Generate security secrets: openssl rand -base64 32
# 4. Add optional AI keys for full features
# 5. Run: npm run db:push to setup database
# 6. Start development: npm run dev